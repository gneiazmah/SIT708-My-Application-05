<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".DataActivity">

    <ImageView
        android:id="@+id/imageViewData"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:background="@drawable/house5"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Brand new house in Chadstone"
        android:textSize="15sp"
        android:gravity="center"
        android:fontFamily="@font/ubuntu_bold"
        android:layout_below="@+id/imageViewData"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="TextView"
        android:fontFamily="@font/boltsemibold"
        android:textSize="10sp"
        android:gravity="left"
        android:layout_below="@+id/tvTitle"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="RELATED Properties"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:gravity="left"
        android:layout_below="@+id/tvDescription"
        android:fontFamily="@font/ubuntu_bold"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:background="@drawable/house3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="Australia to ban recreational vaping in major crackdown on e-cigarettes as teen use soars"
                android:textSize="10sp"
                android:gravity="left"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textViewDescription"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="2dp"
                android:text="The Australian government will ban e-cigarettes through a heavy set of controls on imports and packaging to discourage vaping, especially among teens, under its biggest smoking reforms in more than a decade."
                android:gravity="left"
                android:textSize="7sp"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>